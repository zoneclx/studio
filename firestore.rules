/**
 * @fileoverview Firestore Security Rules for MonoMuse application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for AI-generated text content.
 * Each user can only access their own generated texts, ensuring data privacy and isolation.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, keyed by Firebase Auth UID.
 * - /users/{userId}/generatedTexts/{generatedTextId}: Stores AI-generated text content owned by a specific user.
 *
 * Key Security Decisions:
 * - Users can only list their own generated texts, preventing unauthorized access to other users' content.
 * - The 'messages' collection is not defined. Assuming the error refers to listing `generatedTexts`.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows users to read and write their own user profile.
     * @path /users/{userId}
     * @allow (create) - Authenticated user can create their own profile with matching UID.
     * @allow (get, update, delete) - Authenticated user can read, update, and delete their own profile with matching UID.
     * @deny (create) - Unauthenticated user cannot create any profile.
     * @deny (get, update, delete) - Authenticated user cannot access other user's profiles (UID mismatch).
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.id == request.auth.uid;
      allow delete: if isSignedIn() && isOwner(userId) && resource.data.id == request.auth.uid;
    }

    /**
     * @description Allows users to manage their own generated texts.
     * @path /users/{userId}/generatedTexts/{generatedTextId}
     * @allow (create) - Authenticated user can create generated texts under their own user ID.
     * @allow (get, list, update, delete) - Authenticated user can access, list, update, and delete their own generated texts (UID match).
     * @deny (create) - Unauthenticated user cannot create generated texts.
     * @deny (get, list, update, delete) - Authenticated user cannot access generated texts under other user's IDs (UID mismatch).
     * @principle Enforces document ownership for generated texts.
     */
    match /users/{userId}/generatedTexts/{generatedTextId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && isOwner(userId) && resource.data.userId == request.auth.uid;
    }
  }
}